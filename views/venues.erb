<div class="main-text">
  <% if @venues.any?() %>

    <h3>Here are the current venues:</h3>

    <ul>
      <% @venues.each do |venue| %>
        <li><%= venue.name() %></li>
      <% end %>
    </ul>

  <% else %>

    <h3>There are no venues yet!</h3>

  <% end %>

  <br></br>

  <form action="/venues" method="post">
    <div class="form-group">
      <label for="name">Add a new Venue:</label>
      <input type="text" name="name" id="name" class="text-center">
      <br></br>
      <button type="submit" class="btn btn-danger">Submit</button>
    </div>
  </form>
</div>

<br></br>

<div class="link">
  <a href="/">Back to main page</a>
</div>

<div class="link">
  <a href="/bands">To band list</a>
</div>
