<div class="jumbotron">
  <h1><%= @new_band.name %></h1>

  <form action="/bands/<%= @new_band.id() %>" method="post">
    <div class="form-group">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-danger">Delete <%= @new_band.name() %></button>
    </div>
  </form>
</div>

<% if @venues.any?() %>

  <h3>Here are the current venues:</h3>

  <ul>
    <% @venues.each do |venue| %>
      <li><%= venue.name() %></li>
    <% end %>
  </ul>

<% else %>

  <h3>There are no venues yet!</h3>

<% end %>

<div class="drop-down">
  <form action="/bands/<%= @new_band.id() %>" method="post">
    <label for="name">Select a Venue to add:</label>
    <select id='name' name='name' type='text'>
      <% @venues.each() do |venue| %>
        <option value="<%= venue.id()%>"> <%= venue.name() %> </option>
      <% end %>
    </select>
    <button type="submit" class="btn btn-danger">Add venue</button>
  </form>
</div>

<br></br>

<div class="jumbotron">
  <form action="/bands/<%= @new_band.id() %>" method="post">
    <div class="form-group">
      <input type="hidden" name="_method" value="patch">
      <label for="name">Edit Band Name:</label>
      <input type="text" name="name" id="name" class="text-center">
      <br></br>
      <button type="submit" class="btn btn-danger">Edit</button>
    </div>
  </form>

</div>

