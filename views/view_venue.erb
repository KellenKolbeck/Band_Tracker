<div class="jumbotron">
  <h1><%= @new_venue.name %></h1>

  <form action="/venues/<%= @new_venue.id() %>" method="post">
    <div class="form-group">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-danger">Delete <%= @new_venue.name() %></button>
    </div>
  </form>

    <br></br>

  <form action="/venues/<%= @new_venue.id() %>" method="post">
    <div class="form-group">
      <input type="hidden" name="_method" value="patch">
      <label for="name">Edit Venue Name:</label>
      <input type="text" name="name" id="name" class="text-center">
      <br></br>
      <button type="submit" class="btn btn-danger">Edit</button>
    </div>
  </form>
</div>

<div class="main-text">
  <form action="/venues/<%= @new_venue.id() %>/bands" method="post">
    <select id='band_id' name='name' type='text'>
      <% @bands.each() do |band| %>
        <option value="<%= band.id()%>"> <%= band.name() %> </option>
      <% end %>
      <input type="hidden" name="band_id" id="band_id" value="<%= @new_band %>">
    </select>
      <br></br>
      <button type="submit" class="btn btn-danger">Add band</button>
  </form>
</div>

<div class= "list">
  <% if @new_venue.bands.any?() %>

    <h4>Bands that have played this venue:</h4>

      <ul>
        <% @bands.each() do |band| %>
          <li><a href="/bands/<%= @band.id() %>"></a><%= band.name %></li>
        <% end %>
      </ul>

    <% else %>

      <h4>There aren't any bands yet.</h4>

  <% end %>
</div>
<br></br>


<div class="link">
  <a href="/">Back to main page</a>
</div>

<div class="link">
  <a href="/venues">Back to Venues</a>
</div>
